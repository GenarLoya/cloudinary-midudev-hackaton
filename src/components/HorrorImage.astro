---
import { Image } from "astro:assets";

interface Props {
  rotation: Boolean;
  direction: string;
  data: any;
}

const { rotation, direction, data } = Astro.props;

const rotationRight = "rotate-3";
const rotationLeft = "-rotate-3";
---

<a
  class=`w-full bg-amber-600 h-fit p-2 flex flex-col border-4 border-amber-800 ${rotation ? direction === 'right' ? rotationRight : rotationLeft : ''} cursor-pointer
  transition-all duration-500 hover:brightness-125 hover:shadow-xl hover:scale-105
  `
  href={`/${data.image_identifier}`}
>
  <div class="w-full flex-1 bg-slate-100 border-4 border-amber-800">
    <img src={data.url} alt={data.username + " Vampire"} />
  </div>
</a>
